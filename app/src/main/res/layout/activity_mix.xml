<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MixActivity">

    <Button
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:onClick="toggle"
        android:text="录制按钮" />

    <Button
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:onClick="shiting"
        android:text="试听" />

    <Button
        android:id="@+id/add1"
        android:layout_width="wrap_content"
        android:text="添加音轨1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add2"
        android:layout_width="wrap_content"
        android:text="添加音轨2"
        app:layout_constraintLeft_toRightOf="@id/add1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add3"
        android:layout_width="wrap_content"
        android:text="添加音轨3"
        app:layout_constraintLeft_toRightOf="@id/add2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/del1"
        android:layout_width="wrap_content"
        android:text="删除音轨1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add1"
        android:layout_height="wrap_content"
        android:onClick="delTrack1"/>

    <Button
        android:id="@+id/del2"
        android:layout_width="wrap_content"
        android:text="删除音轨2"
        app:layout_constraintLeft_toRightOf="@id/del1"
        app:layout_constraintTop_toBottomOf="@id/add1"
        android:layout_height="wrap_content"
        android:onClick="delTrack2"/>

    <Button
        android:id="@+id/del3"
        android:layout_width="wrap_content"
        android:text="删除音轨3"
        app:layout_constraintLeft_toRightOf="@id/del2"
        app:layout_constraintTop_toBottomOf="@id/add1"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/play1"
        android:layout_width="wrap_content"
        android:text="播放/暂停音轨1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/del1"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/play2"
        android:layout_width="wrap_content"
        android:text="播放/暂停音轨2"
        app:layout_constraintLeft_toRightOf="@id/play1"
        app:layout_constraintTop_toBottomOf="@id/del1"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/play3"
        android:layout_width="wrap_content"
        android:text="播放/暂停音轨3"
        app:layout_constraintLeft_toRightOf="@id/play2"
        app:layout_constraintTop_toBottomOf="@id/del1"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>